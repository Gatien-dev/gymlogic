@model IdentitySample.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
}


<div class="col-md-4 col-md-offset-2">
    <h4 class="box-title text-bold">Informations générales de l'utilisateur</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Prenoms)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Prenoms)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div class="col-md-6">
    <h4 class="box-title text-bold">Droits d'accès de cet utilisateur</h4>
    @if (ViewBag.RoleNames.Count == 0)
    {
        <hr />
        <small class="info"> <span class="text-danger">Aucun droit d'accès</span> enregistré au nom de ce client.</small>

    }

    <table class="table">

        @foreach (var item in ViewBag.RoleNames)
        {
            <tr>
                <td>
                    @item
                </td>
            </tr>
        }
    </table>
</div>
<div class="col-md-12 text-center">

    <a class="btn btn-default" href="@Url.Action("Edit", new { id = Model.Id })"><span class="fa fa-edit"> </span> Modifier</a>
    <a class="btn btn-primary" href="@Url.Action("Index")"><span class="fa fa-arrow-circle-left"> </span> Retour</a>
</div>



